<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTS"
        android:gravity="center_horizontal"
        android:textSize="48sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/winner_declaration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="42sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        tools:text="player1 wins"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:background="@android:color/holo_red_light">
        <TextView
            android:id="@+id/user1_name_results"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            tools:text="player1"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/user2_name_results"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            tools:text="player2"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">
        <TextView
            android:id="@+id/user1_score_results"
            android:layout_width="0dp"
            android:layout_weight="45"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:text="player1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="score"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/user2_score_results"
            android:layout_width="0dp"
            android:layout_weight="45"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:text="player1"
            android:gravity="center_horizontal"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/user1_break_results"
            android:layout_width="0dp"
            android:layout_weight="45"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:text="player1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Highest Break"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/user2_break_results"
            android:layout_width="0dp"
            android:layout_weight="45"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:text="player1"
            android:gravity="center_horizontal"/>
    </LinearLayout>



    <TextView
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginVertical="64dp"
        tools:text="duration is"/>

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="40dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_light"/>
</LinearLayout>